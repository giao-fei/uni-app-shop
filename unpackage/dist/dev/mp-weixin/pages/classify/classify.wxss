.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 10rpx);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.cates .cates_container .left_menu {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  background-color: #f2f2f2;
  border: 1px #f2f2f2 solid;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  color: red;
  background-color: #FFFFFF;
}
.cates .cates_container .right_content {
  -webkit-box-flex: 5;
  -webkit-flex: 5;
          flex: 5;
}
.cates .cates_container .right_content .goods_group .goods_title {
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cates .cates_container .right_content .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_content .goods_group .goods_list {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.cates .cates_container .right_content .goods_group .goods_list .navigator {
  width: 32%;
  margin-bottom: 20rpx;
  text-align: center;
}
.cates .cates_container .right_content .goods_group .goods_list .navigator image {
  width: 70%;
}
@media screen and (min-width: 1024px) {
.cates {
    height: 100%;
}
.cates .cates_container .left_menu {
    -webkit-box-flex: 2;
    -webkit-flex: 2;
            flex: 2;
    background-color: #f2f2f2;
    border: 1px #f2f2f2 solid;
}
.cates .cates_container .left_menu .menu_item {
    height: 150rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    font-size: 60rpx;
}
}
.goods_list .navigator {
  background-color: #FFFFFF;
}

